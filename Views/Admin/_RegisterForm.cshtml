@model List<testingSite.Models.Group>
<h2>Регистрация пользователя</h2>
<form id="registerForm">
    <div>
        <label for="username">Логин:</label>
        <input type="text" id="username" name="username" required />
    </div>
    <div>
        <label for="password">Пароль:</label>
        <input type="password" id="password" name="password" required />
    </div>
    <div>
        <label for="role">Роль:</label>
        <select id="role" name="role" class="form-control" required>
            <option value="">---</option>
            <option value="admin">Admin</option>
            <option value="teacher">Teacher</option>
            <option value="student">Student</option>
        </select>
    </div>
    <div>
        <label for="groupSelect" class="form-label">Группа:</label>
        <select id="groupSelect" name="groupSelect" class="form-control">
            <option value="">---</option>
            @foreach (var group in Model)
            {
                <option value="@group.Id">@group.Name</option>
            }
        </select>
    </div>
    <button class="add-button" id="register" type="submit">Создать пользователя</button>
</form>
@if (ViewBag.Error != null) { <p style="color:red">@ViewBag.Error</p> }
@if (ViewBag.Success != null) { <p style="color:green">@ViewBag.Success</p> }


