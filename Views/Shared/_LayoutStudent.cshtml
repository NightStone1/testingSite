<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - testingSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/testingSite.styles.css" asp-append-version="true" />
</head>
<body>
    <partial name="_Header" />
    <main style="display: flex;">
        <div style="max-height: 500px; flex: 1; background-color: #eee; padding: 20px;">
            @await Html.PartialAsync("_SidebarStudent")
        </div>
        <div style="flex: 2; padding: 20px;">
            @RenderBody()
        </div>
    </main>
    <partial name="_Footer"/>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
